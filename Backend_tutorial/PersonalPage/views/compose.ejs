<%- include("partials/header") -%>
<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="titleEntry">Title</label>
        <input type="text" name="titleEntry" class="form-control">
    </div>
    <div class="form-group">
        <label for="postEntry">Post</label>
        <textarea class="form-control" name="postEntry" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary" name="publish">Publish</button>
</form>

<%- include("partials/footer") -%>